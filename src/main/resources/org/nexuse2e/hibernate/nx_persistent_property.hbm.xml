<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-cascade="all">
    <class name="org.nexuse2e.pojo.PersistentPropertyPojo" table="nx_persistent_property" lazy="false">
        <comment></comment>
        <id name="nxPersistentPropertyId" type="int">
            <column name="id" sql-type="integer"/>
            <generator class="native" />
        </id>
        
        <property name="namespace" type="string" unique-key="unique_property" index="ix_persistent_property_1">
            <column name="namespace" length="128">
                <comment></comment>
            </column>
        </property>
        <property name="version" type="string" unique-key="unique_property" index="ix_persistent_property_2">
            <column name="version" length="128">
                <comment></comment>
            </column>
        </property>
        <property name="name" type="string" unique-key="unique_property" index="ix_persistent_property_3">
            <column name="name" length="128">
                <comment></comment>
            </column>
        </property>
        <property name="value" type="string">
            <column name="value" length="128">
                <comment></comment>
            </column>
        </property>
        
    </class>
</hibernate-mapping>
