<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.nexuse2e.pojo.ServicePojo" table="nx_service" lazy="false">
        <comment></comment>
        <id name="nxServiceId" type="int">
            <column name="nx_service_id" />
            <generator class="native" />
        </id>
        
        <many-to-one foreign-key="fk__service__component_id" name="component" column="nx_component_id" class="org.nexuse2e.pojo.ComponentPojo" not-null="true" index="ix_service_1"/>

        <property name="createdDate" type="timestamp">
            <column name="created_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="modifiedDate" type="timestamp">
            <column name="modified_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="modifiedNxUserId" type="int">
            <column name="modified_nx_user_id" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
        
        <property name="position" type="int">
            <column name="position" not-null="true" sql-type="integer">
                <comment>Service position, starting with 0</comment>
            </column>
        </property>
        
        <property name="name" type="string">
            <column name="name" length="64" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="description" type="string">
            <column name="description" length="64">
                <comment></comment>
            </column>
        </property>
        
        <bag name="serviceParams" lazy="false" inverse="true" cascade="all,delete-orphan">
        	<key column="nx_service_id"/> 
        	<one-to-many class="org.nexuse2e.pojo.ServiceParamPojo"/>
        </bag>
    </class>
</hibernate-mapping>
