<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-cascade="all">
    <class name="org.nexuse2e.pojo.ChoreographyPojo" table="nx_choreography">
        <comment></comment>
        <id name="nxChoreographyId" type="int">
            <column name="nx_choreography_id" sql-type="integer"/>
            <generator class="native" />
        </id>
        <property name="description" type="string">
            <column name="description" length="64">
                <comment></comment>
            </column>
        </property>
        <property name="name" type="string">
            <column name="name" length="64" not-null="true" unique="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="createdDate" type="timestamp">
            <column name="created_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="modifiedDate" type="timestamp">
            <column name="modified_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="modifiedNxUserId" type="int">
            <column name="modified_nx_user_id" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
        <bag name="participants" inverse="true" lazy="false" cascade="all-delete-orphan">
        	<key column="nx_choreography_id"/> 
        	<one-to-many class="org.nexuse2e.pojo.ParticipantPojo" />
		</bag>
		<set name="actions" inverse="true" lazy="false" cascade="all,delete-orphan">
        	<key column="nx_choreography_id"/> 
        	<one-to-many class="org.nexuse2e.pojo.ActionPojo" />
		</set>
    </class>
</hibernate-mapping>
