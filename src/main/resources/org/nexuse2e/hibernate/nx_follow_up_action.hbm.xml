<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.nexuse2e.pojo.FollowUpActionPojo" table="nx_follow_up_action" lazy="false">
        <comment></comment>
        <id name="nxFollowUpActionId" type="int">
            <column name="nx_follow_up_action_id" sql-type="integer"/>
            <generator class="native" />
        </id>
        
        <many-to-one foreign-key="fk__fua__action_id" name="action" column="nx_action_id" class="org.nexuse2e.pojo.ActionPojo" not-null="false" index="ix_follow_up_action_1"/>
        
        <many-to-one foreign-key="fk__fua__follow_up_action_id" name="followUpAction" column="follow_up_nx_action_id" class="org.nexuse2e.pojo.ActionPojo" not-null="false" index="ix_follow_up_action_2"/>
        
        <property name="createdDate" type="timestamp">
            <column name="created_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="modifiedDate" type="timestamp">
            <column name="modified_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="modifiedNxUserId" type="int">
            <column name="modified_nx_user_id" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
