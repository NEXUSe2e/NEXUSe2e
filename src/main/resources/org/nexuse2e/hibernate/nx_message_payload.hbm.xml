<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.nexuse2e.pojo.MessagePayloadPojo" table="nx_message_payload" lazy="false">
        <comment></comment>
        <id name="nxMessagePayloadId" type="int">
            <column name="nx_message_payload_id" sql-type="integer"/>
            <generator class="native" />
        </id>
        
        <many-to-one foreign-key="fk__msg_payload__message_id" name="message" column="nx_message_id" class="org.nexuse2e.pojo.MessagePojo" not-null="true" index="ix_message_payload_1"/>
        
        <property name="sequenceNumber" type="int">
            <column name="sequence_number" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
        <property name="mimeType" type="string">
            <column name="mime_type" length="64" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="contentId" type="string">
            <column name="content_id" length="96" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="payloadData" type="org.nexuse2e.pojo.BinaryBlobType" >
            <column name="payload_data" not-null="true" length="8000000">
                <comment></comment>
            </column>
        </property>
        <property name="createdDate" type="timestamp">
            <column name="created_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="modifiedDate" type="timestamp" >
            <column name="modified_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="modifiedNxUserId" type="int" >
            <column name="modified_nx_user_id" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
