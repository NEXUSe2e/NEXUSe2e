<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-cascade="all">
    <class name="org.nexuse2e.pojo.ActionPojo" table="nx_action" lazy="false">
        <comment></comment>
        <id name="nxActionId" type="int">
            <column name="nx_action_id" sql-type="integer"/>
            <generator class="native" />
        </id>
        
        <many-to-one foreign-key="fk__action__choreography_id" name="choreography" column="nx_choreography_id" class="org.nexuse2e.pojo.ChoreographyPojo" not-null="true" cascade="none" index="ix_action_1"/>
        
        
        <property name="createdDate" type="timestamp">
            <column name="created_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="modifiedDate" type="timestamp">
            <column name="modified_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="modifiedNxUserId" type="int">
            <column name="modified_nx_user_id" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
        
        <property name="start" type="boolean">
            <column name="start_flag" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
        
        <property name="end" type="boolean">
            <column name="end_flag" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
        
       
        <many-to-one foreign-key="fk__action__inbound_pipeline_id" name="inboundPipeline" column="inbound_nx_pipeline_id" class="org.nexuse2e.pojo.PipelinePojo" not-null="true" cascade="none" index="ix_action_2"/>
        
        <many-to-one foreign-key="fk__action__outbound_pipeline_id" name="outboundPipeline" column="outbound_nx_pipeline_id" class="org.nexuse2e.pojo.PipelinePojo" not-null="true" cascade="none" index="ix_action_3"/>
        
        
        <property name="name" type="string">
            <column name="name" length="64" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        
        <set name="followUpActions" inverse="true" lazy="false" cascade="all,delete-orphan">
        	<key column="nx_action_id"/> 
        	<one-to-many class="org.nexuse2e.pojo.FollowUpActionPojo"/>
		</set>
		
        <set name="followedActions" inverse="true" lazy="false" cascade="all,delete-orphan">
        	<key column="follow_up_nx_action_id"/> 
        	<one-to-many class="org.nexuse2e.pojo.FollowUpActionPojo"/>
		</set>
        
        
    </class>
</hibernate-mapping>
