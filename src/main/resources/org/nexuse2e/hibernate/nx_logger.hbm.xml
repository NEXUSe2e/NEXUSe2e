<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.nexuse2e.pojo.LoggerPojo" table="nx_logger" lazy="false">
        <comment></comment>
        <id name="nxLoggerId" type="int">
            <column name="nx_logger_id" />
            <generator class="native" />
        </id>
        
        <many-to-one foreign-key="fk__logger__component_id" name="component" column="nx_component_id" class="org.nexuse2e.pojo.ComponentPojo" not-null="true" index="ix_logger_1"/>

        <property name="createdDate" type="timestamp">
            <column name="created_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="modifiedDate" type="timestamp">
            <column name="modified_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="modifiedNxUserId" type="int">
            <column name="modified_nx_user_id" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
        
        <property name="name" type="string">
            <column name="name" length="64" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="autostart" type="boolean">
            <column name="autostart_flag" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
         
        <property name="threshold" type="int">
            <column name="threshold" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
        
        <property name="filter" type="string">
            <column name="filter" length="4098" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="description" type="string">
            <column name="description" length="64">
                <comment></comment>
            </column>
        </property>
        
        <bag name="loggerParams" lazy="false" inverse="true" cascade="all,delete-orphan">
        	<key column="nx_logger_id"/> 
        	<one-to-many class="org.nexuse2e.pojo.LoggerParamPojo"/>
		</bag>
        
        
        
    </class>
</hibernate-mapping>
