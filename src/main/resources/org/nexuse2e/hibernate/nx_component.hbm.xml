<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-cascade="all">
    <class name="org.nexuse2e.pojo.ComponentPojo" table="nx_component" lazy="false">
        <comment></comment>
        <id name="nxComponentId" type="int">
            <column name="nx_component_id" sql-type="integer"/>
            <generator class="native" />
        </id>
        
        <property name="createdDate" type="timestamp">
            <column name="created_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="modifiedDate" type="timestamp">
            <column name="modified_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="modifiedNxUserId" type="int">
            <column name="modified_nx_user_id" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
        
         <property name="type" type="int">
            <column name="type" not-null="true" sql-type="integer">
                <comment>1=pipelet, 2=notifier</comment>
            </column>
        </property>
        <property name="name" type="string">
            <column name="name" length="64" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="className" type="string">
            <column name="class_name" length="1024" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="description" type="string">
            <column name="description" length="64">
                <comment></comment>
            </column>
        </property>
        
    </class>
</hibernate-mapping>
