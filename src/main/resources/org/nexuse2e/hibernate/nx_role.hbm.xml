<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.nexuse2e.pojo.RolePojo" table="nx_role" lazy="false">
        <comment></comment>
        <id name="nxRoleId" type="int">
            <column name="nx_role_id" sql-type="integer"/>
            <generator class="native" />
        </id>
        
        <property name="name" type="string">
            <column name="name" length="64" not-null="true">
                <comment></comment>
            </column>
        </property>
        <property name="description" type="string">
            <column name="description" length="64" not-null="false">
                <comment></comment>
            </column>
        </property>
        
      <property name="createdDate" type="timestamp">
            <column name="created_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="modifiedDate" type="timestamp">
            <column name="modified_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="modifiedNxUserId" type="int">
            <column name="modified_nx_user_id" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>
      
        <map name="grantMap" lazy="false" cascade="all,delete-orphan">
            <key column="nxGrantId" not-null="true" foreign-key="fk__grant__grant_id"/>
            <map-key formula="target" type="string"/>
            <one-to-many class="org.nexuse2e.pojo.GrantPojo"/>
        </map>
        
    </class>
</hibernate-mapping>
