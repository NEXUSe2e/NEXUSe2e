<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.nexuse2e.pojo.GrantPojo" table="nx_grant" lazy="false">
        <comment></comment>
        <id name="nxGrantId" type="int">
            <column name="nx_grant_id" sql-type="integer"/>
            <generator class="native" />
        </id>
        
        <property name="target" type="string">
            <column name="target" length="64" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="createdDate" type="timestamp">
            <column name="created_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="modifiedDate" type="timestamp">
            <column name="modified_date" not-null="true">
                <comment></comment>
            </column>
        </property>
        
        <property name="modifiedNxUserId" type="int">
            <column name="modified_nx_user_id" not-null="true" sql-type="integer">
                <comment></comment>
            </column>
        </property>  
    </class>
</hibernate-mapping>
