<?xml version="1.0" encoding="UTF-8"?><project basedir="." default="schemaexport" name="NEXUSe2e_hiberante">	<property environment="env" />	<property name="target" value="1.5" />	<property name="source" value="1.5" />	<property name="dir.webinf" value="${basedir}/src/main/webapp/WEB-INF" />	<property name="dir.classes" value="${dir.webinf}/classes" />	<property name="dir.source" value="src" />	<property name="dir.resources" value="src/main/resources" />	<property name="dir.services" value="${dir.webinf}/services" />	<property name="dir.distribution" value="dist" />	<path id="NEXUSe2e.classpath">		<pathelement location="${dir.webinf}/classes" />
		<fileset dir="${dir.webinf}/lib" />	</path>
		<target name="schemaexport">		<property name="dbtype" value="oracle" />		<!--		<property name="dbtype" value="derby" />		    <property name="dbtype" value="mysql"/>			-->
		<taskdef name="schemaexport" classname="org.hibernate.tool.hbm2ddl.SchemaExportTask" classpathref="NEXUSe2e.classpath" />		<schemaexport properties="src/test/database/hibernate_${dbtype}.properties" quiet="no" text="no" drop="no" delimiter=";" output="src/test/database/schema-export-${dbtype}.sql">			<fileset dir="src/main/resources">				<include name="**/nx_*.hbm.xml" />			</fileset>		</schemaexport>	</target></project>