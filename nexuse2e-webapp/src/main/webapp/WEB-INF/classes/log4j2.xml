<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp" packages="org.nexuse2e.logging" monitorInterval="30">
    <Appenders>
        <DatabaseLogger name="DatabaseLogger_default"/>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5p] %d{ISO8601} %l - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.nexuse2e" level="WARN" includeLocation="true" additivity="true" >
            <AppenderRef ref="DatabaseLogger_default"/>
        </Logger>

        <Logger name="org.nexuse2e" level="INFO" includeLocation="true" additivity="false" >
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="ERROR" includeLocation="true">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
