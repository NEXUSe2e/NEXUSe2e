<jsp:root xmlns:c="http://java.sun.com/jsp/jstl/core"
    xmlns:nexus="/tags/nexus"
    xmlns:fn="http://java.sun.com/jsp/jstl/functions"
    xmlns:spring="http://www.springframework.org/tags"
    xmlns:form="http://www.springframework.org/tags/form"
    xmlns:jsp="http://java.sun.com/JSP/Page"
    xmlns:tiles="http://tiles.apache.org/tags-tiles"
    version="2.0">

    <table class="NEXUS_TABLE" width="100%">
        <tr>
            <td>
                <nexus:crumbs/>
            </td>
        </tr>
        <tr>
            <td class="NEXUSScreenName">Server Certificate</td>
        </tr>
    </table>

    <table class="NEXUS_TABLE" width="100%">
        <tr>            
            <td colspan="2" class="NEXUSSection">CA Certificate</td>            
        </tr>
        <tr>
            <td class="NEXUSName">Alias</td>
            <td class="NEXUSValue">${certificatePropertiesForm.alias}</td>
        </tr>
        <tr>
            <td class="NEXUSName">Common Name</td>
            <td class="NEXUSValue">${certificatePropertiesForm.commonName}</td>
        </tr>
        <tr>
            <td class="NEXUSName">Organisation</td>
            <td class="NEXUSValue">${certificatePropertiesForm.organisation}</td>
        </tr>
        <tr>
            <td class="NEXUSName">Organisation Unit</td>
            <td class="NEXUSValue">${certificatePropertiesForm.organisationUnit}</td>
        </tr>
        <tr>
            <td class="NEXUSName">Country</td>
            <td class="NEXUSValue">${certificatePropertiesForm.country}</td>
        </tr>
        <tr>
            <td class="NEXUSName">State</td>
            <td class="NEXUSValue">${certificatePropertiesForm.state}</td>
        </tr>
        <tr>
            <td class="NEXUSName">Location</td>
            <td class="NEXUSValue">${certificatePropertiesForm.location}</td>
        </tr>
        <tr>
            <td class="NEXUSName">E-Mail</td>
            <td class="NEXUSValue">${certificatePropertiesForm.email}</td>
        </tr>
        <tr>
            <td class="NEXUSName">Not Valid Before</td>
            <td class="NEXUSValue">${certificatePropertiesForm.notBefore}</td>
        </tr>
        <tr>
            <td class="NEXUSName">Not Valid After</td>
            <td class="NEXUSValue">${certificatePropertiesForm.notAfter}</td>
        </tr>
        <tr>
            <td class="NEXUSName">Validity</td>
            <td class="NEXUSValue">
                <c:choose>
                    <c:when test="${certificatePropertiesForm.valid}">
                        <span class="DataRowOk">OK ${certificatePropertiesForm.timeRemaining}.</span>
                    </c:when>
                    <c:otherwise>
                        <c:choose>
                            <c:when test="${empty certificatePropertiesForm.timeRemaining}">
                                <span class="DataRowAlert">Certificate has expired.</span>
                            </c:when>
                            <c:otherwise>
                                <span class="DataRowAlert">Certificate is not yet valid.</span>
                            </c:otherwise>
                        </c:choose>
                    </c:otherwise>
                </c:choose>
            </td>
        </tr>
        <tr>
            <td class="NEXUSName">Fingerprint</td>
            <td class="NEXUSValue">${certificatePropertiesForm.fingerprint}</td>
        </tr>
    </table>
        
    <table class="NEXUS_BUTTON_TABLE" width="100%">
        <tr>
            <td class="BUTTON_LEFT">
                <nobr><nexus:link href="CACertificatesList.do" styleClass="button"><img src="images/icons/resultset_previous.png" name="resultsButton" class="button" />Back</nexus:link></nobr>
            </td>
            <td class="BUTTON_RIGHT">
                <nobr>
                    <nexus:link href="CACertificateDelete.do?nxCertificateId=${certificatePropertiesForm.nxCertificateId}" styleClass="NexusHeaderLink">
                        <img src="images/icons/delete.png" class="button"/>Delete
                    </nexus:link>
                </nobr>
            </td>
        </tr>
    </table>
</jsp:root>