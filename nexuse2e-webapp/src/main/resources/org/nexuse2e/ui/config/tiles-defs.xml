<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
  <!-- 
  **************************************************************************
  Layout definitions
  **************************************************************************
  -->
  <definition name="skeleton" template="/WEB-INF/pages/skeleton.jspx">
    <put-attribute name="dojo" value="/WEB-INF/pages/dojo.jspx"/>
    <put-attribute name="title" value="NEXUSe2e Server" />
    <put-attribute name="content" value="" />
  </definition>
  
  <definition name="layout.default" template="/WEB-INF/pages/layout_default.jspx">
    <put-attribute name="header" value="/WEB-INF/pages/banner.jspx" />
    <put-attribute name="menu" value="/WEB-INF/pages/navigator.jspx" />
    <put-attribute name="document" value="" />
  </definition>
  
  <definition name="layout.noNavigator" template="/WEB-INF/pages/layout_no_navigator.jspx">
    <put-attribute name="header" value="/WEB-INF/pages/banner.jspx" />
    <put-attribute name="document" value="" />
  </definition>
  
  <!-- 
  **************************************************************************
  Pages
  **************************************************************************
  -->
  
  <definition name="login.content.tile" extends="layout.noNavigator">
    <put-attribute name="document" value="/WEB-INF/pages/user/login.jspx" />
  </definition>
  <definition name="login.page" extends="skeleton">
    <put-attribute name="content" value="login.content.tile" />
  </definition>
  
  <definition name="admin.content.tile" extends="layout.default">
    <put-attribute name="document" value="/WEB-INF/pages/home.jspx" />
  </definition>
  <definition name="admin.page" extends="skeleton">
    <put-attribute name="content" value="admin.content.tile" />
  </definition>
  
</tiles-definitions>
